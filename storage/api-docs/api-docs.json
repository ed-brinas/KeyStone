{
    "openapi": "3.0.0",
    "info": {
        "title": "KeyStone Active Directory API",
        "description": "API for managing on-premise Active Directory users and groups.",
        "contact": {
            "name": "API Support",
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate user against Active Directory",
                "operationId": "da2ca4d7a5cdec77b8b45a20373535cb",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password",
                                    "domain"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "jdoe"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123"
                                    },
                                    "domain": {
                                        "type": "string",
                                        "example": "ncc.local"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful authentication",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials or not authorized"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/v1/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Log out the current user",
                "operationId": "c4eddaf1a2e990cc90e4326c0d731d41",
                "responses": {
                    "204": {
                        "description": "Successfully logged out"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}/reset-password": {
            "post": {
                "tags": [
                    "Password Management"
                ],
                "summary": "Reset a standard user's password",
                "operationId": "b537f46d52328b34bf84d80b610250a5",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Password has been reset",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "new_password": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}/reset-admin-password": {
            "post": {
                "tags": [
                    "Password Management"
                ],
                "summary": "Reset a privileged admin user's password",
                "operationId": "129a1bece8dbe0b1ad4e04c9b171d297",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "description": "The base username, e.g., 'jdoe' not 'jdoe-a'",
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin password has been reset",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "new_password": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Admin account not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users": {
            "post": {
                "tags": [
                    "User Management"
                ],
                "summary": "Create a new Active Directory user",
                "operationId": "ba548b97148bb5c0d8cab3bc3f128bfd",
                "requestBody": {
                    "description": "User creation data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}": {
            "get": {
                "tags": [
                    "User Management"
                ],
                "summary": "Get user details",
                "operationId": "54e9ac63cdf0ba43073e029cbad6b71c",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}/enable": {
            "patch": {
                "tags": [
                    "User Management"
                ],
                "summary": "Enable a user account",
                "operationId": "6cf8ed39d155a0474ee8c1e0bf819269",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Account enabled"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}/disable": {
            "patch": {
                "tags": [
                    "User Management"
                ],
                "summary": "Disable a user account",
                "operationId": "3a2ec9f5c0ea6c7d869254e154bfa934",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Account disabled"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/users/{samaccountname}/unlock": {
            "patch": {
                "tags": [
                    "User Management"
                ],
                "summary": "Unlock a user account",
                "operationId": "67af2c7870632cf43018eec256f43834",
                "parameters": [
                    {
                        "name": "samaccountname",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Account unlocked"
                    },
                    "404": {
                        "description": "User not found"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "CreateUserRequest": {
                "title": "Create User Request",
                "required": [
                    "firstName",
                    "lastName",
                    "samaccountname",
                    "domain"
                ],
                "properties": {
                    "firstName": {
                        "description": "The user's first name.",
                        "type": "string",
                        "example": "John"
                    },
                    "lastName": {
                        "description": "The user's last name.",
                        "type": "string",
                        "example": "Doe"
                    },
                    "samaccountname": {
                        "description": "The desired username (SAM account name).",
                        "type": "string",
                        "example": "jdoe"
                    },
                    "domain": {
                        "description": "The target Active Directory domain.",
                        "type": "string",
                        "example": "ncc.local"
                    },
                    "isPrivileged": {
                        "description": "Set to true to create a privileged '-a' account.",
                        "type": "boolean",
                        "example": false
                    },
                    "optionalGroups": {
                        "description": "A list of optional security groups to add the user to.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": [
                            "CN=L1,CN=Users,DC=ncc,DC=local"
                        ]
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Password Management",
            "description": "Password Management"
        },
        {
            "name": "User Management",
            "description": "User Management"
        }
    ]
}