{
    "openapi": "3.0.0",
    "info": {
        "title": "Keystone API",
        "description": "Unified API documentation for authentication and user management.",
        "contact": {
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local API Server"
        }
    ],
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate user and generate token",
                "description": "Validates user credentials and returns an access token upon successful authentication.",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "domain",
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "domain": {
                                        "type": "string",
                                        "example": "example.com"
                                    },
                                    "username": {
                                        "type": "string",
                                        "example": "jdoe"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful, token returned"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    },
                    "422": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/me": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Get authenticated user's information",
                "description": "Returns information about the currently authenticated user.",
                "operationId": "9d9bc556f927575aa492a88c28fe5908",
                "responses": {
                    "200": {
                        "description": "Authenticated user info returned"
                    },
                    "401": {
                        "description": "User not authenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout authenticated user",
                "description": "Invalidates the user's current JWT token and logs them out of the session.",
                "operationId": "fe8f3429cd6979b3b4517e186505f9f9",
                "responses": {
                    "200": {
                        "description": "Logout successful"
                    },
                    "401": {
                        "description": "User not authenticated"
                    },
                    "500": {
                        "description": "Server error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/config": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get configuration details",
                "description": "Provides domain and optional group configuration details used for user management.",
                "operationId": "2b6e107dfb2a5623c3ec5c3da86df7c9",
                "responses": {
                    "200": {
                        "description": "Configuration retrieved successfully"
                    }
                }
            }
        },
        "/api/current-user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get current authenticated user",
                "description": "Returns details of the currently authenticated user (placeholder implementation).",
                "operationId": "6c11cde44ffdb5715e887862cf53d131",
                "responses": {
                    "200": {
                        "description": "Authenticated user details returned successfully"
                    }
                }
            }
        },
        "/api/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "List Active Directory users",
                "description": "Retrieves users filtered by domain, name, account status, and admin account existence.",
                "operationId": "c457726701591d1183b53aa71fc13441",
                "parameters": [
                    {
                        "name": "domain",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "nameFilter",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "statusFilter",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "hasAdminAccount",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of users returned successfully"
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/users/{samAccountName}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retrieve detailed user information",
                "description": "Retrieves detailed information for a specific user based on samAccountName and domain.",
                "operationId": "8cb38e2b627f5dd06a35f3205ba68cbc",
                "parameters": [
                    {
                        "name": "domain",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "samAccountName",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User details retrieved successfully"
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/api/users/enable": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Enable user account",
                "description": "Enables a user account in Active Directory (sets userAccountControl flag 512).",
                "operationId": "06ee0a18111d0df6a9a42b3b89fd320f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "domain",
                                    "samAccountName"
                                ],
                                "properties": {
                                    "domain": {
                                        "type": "string"
                                    },
                                    "samAccountName": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Account enabled successfully"
                    },
                    "404": {
                        "description": "User not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Users",
            "description": "Users"
        }
    ]
}